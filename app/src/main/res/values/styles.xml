<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/textMarginX</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">@dimen/textMarginX</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/textMarginX</item>
        <item name="android:layout_marginTop">@dimen/textMarginY15</item>
        <item name="android:layout_marginRight">@dimen/textMarginX</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColorHint">#78909C</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="theme_yellow_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/textMarginX</item>
        <item name="android:layout_marginTop">@dimen/textMarginY15</item>
        <item name="android:layout_marginRight">@dimen/textMarginX</item>
        <item name="android:backgroundTint">@color/theme_yellow_dark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorLink">#00FFDE</item>
    </style>

    <style name="theme_yellow_back_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/textMarginX</item>
        <item name="android:layout_marginTop">@dimen/textMarginY15</item>
        <item name="android:layout_marginRight">@dimen/textMarginX</item>
        <item name="android:backgroundTint">@color/theme_yellow_dark</item>
        <item name="android:textColor">#FFFFFF</item>

        <item name="android:textColorLink">#00FFDE</item>
    </style>
</resources>